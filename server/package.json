    "@types/node": "^22.15.18",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-json-schema": "^0.65.1"
  }
