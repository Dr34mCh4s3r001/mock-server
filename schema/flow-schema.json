{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "FeatureNodeType": {
            "enum": [
                "httpRequest",
                "jsonHttpResponse",
                "messageNode"
            ],
            "type": "string"
        },
        "HTTPMethod": {
            "enum": [
                "DELETE",
                "GET",
                "PATCH",
                "POST",
                "PUT"
            ],
            "type": "string"
        },
        "JsonHttpRequestNode": {
            "allOf": [
                {
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "next": {
                            "type": "string"
                        },
                        "node": {
                            "$ref": "#/definitions/FeatureNodeType"
                        },
                        "type": {
                            "$ref": "#/definitions/NodeType"
                        }
                    },
                    "type": "object"
                },
                {
                    "properties": {
                        "config": {
                            "properties": {
                                "method": {
                                    "$ref": "#/definitions/HTTPMethod"
                                },
                                "path": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "next": {
                            "type": "string"
                        },
                        "node": {
                            "const": "httpRequest",
                            "type": "string"
                        },
                        "type": {
                            "const": "start",
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            ]
        },
        "JsonHttpResponseNode": {
            "allOf": [
                {
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "next": {
                            "type": "string"
                        },
                        "node": {
                            "$ref": "#/definitions/FeatureNodeType"
                        },
                        "type": {
                            "$ref": "#/definitions/NodeType"
                        }
                    },
                    "type": "object"
                },
                {
                    "properties": {
                        "config": {
                            "properties": {
                                "httpStatus": {
                                    "type": "number"
                                },
                                "json": {
                                    "additionalProperties": true,
                                    "properties": {},
                                    "type": "object"
                                }
                            },
                            "type": "object"
                        },
                        "node": {
                            "const": "jsonHttpResponse",
                            "type": "string"
                        },
                        "type": {
                            "const": "action",
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            ]
        },
        "JsonNode": {
            "anyOf": [
                {
                    "$ref": "#/definitions/MessageNode"
                },
                {
                    "$ref": "#/definitions/JsonHttpRequestNode"
                },
                {
                    "$ref": "#/definitions/JsonHttpResponseNode"
                }
            ]
        },
        "MessageNode": {
            "allOf": [
                {
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "next": {
                            "type": "string"
                        },
                        "node": {
                            "$ref": "#/definitions/FeatureNodeType"
                        },
                        "type": {
                            "$ref": "#/definitions/NodeType"
                        }
                    },
                    "type": "object"
                },
                {
                    "properties": {
                        "message": {
                            "type": "string"
                        },
                        "node": {
                            "const": "messageNode",
                            "type": "string"
                        },
                        "type": {
                            "const": "action",
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            ]
        },
        "NodeType": {
            "enum": [
                "action",
                "end",
                "if",
                "start"
            ],
            "type": "string"
        }
    },
    "properties": {
        "info": {
            "properties": {
                "name": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "nodes": {
            "items": {
                "$ref": "#/definitions/JsonNode"
            },
            "type": "array"
        }
    },
    "type": "object"
}

